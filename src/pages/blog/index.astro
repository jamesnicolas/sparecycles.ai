---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: var(--content-width-wide);
			}
			.page-header {
				margin: 0 0 3rem 0;
				animation: fadeUp 600ms ease forwards;
			}
			.page-header h1 {
				font-family: var(--font-display);
				font-weight: 600;
				margin-bottom: 0.5rem;
			}
			.page-header p {
				color: var(--color-text-muted);
				font-size: 1rem;
				margin: 0;
				max-width: 48ch;
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
				gap: 1.25rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: 100%;
				opacity: 0;
				animation: fadeUp 500ms ease forwards;
			}
			ul li:nth-child(1) { animation-delay: 150ms; }
			ul li:nth-child(2) { animation-delay: 250ms; }
			ul li:nth-child(3) { animation-delay: 350ms; }
			ul li:nth-child(4) { animation-delay: 450ms; }
			ul li:nth-child(5) { animation-delay: 550ms; }
			ul li:nth-child(6) { animation-delay: 650ms; }
			ul li a {
				display: block;
				color: inherit;
				text-decoration: none;
			}
			.article-card .meta {
				text-transform: none;
			}
			.article-card .author-name {
				font-family: var(--font-mono);
				font-size: 12px;
				color: var(--color-text-muted);
				letter-spacing: 0.02em;
				display: flex;
				align-items: center;
				gap: 0.4rem;
			}
			.author-dot {
				width: 6px;
				height: 6px;
				border-radius: 50%;
				background: hsla(var(--sigil-hue, 28), 50%, 55%, 0.8);
				flex-shrink: 0;
			}
			@media (max-width: 720px) {
				.page-header {
					text-align: left;
				}
				ul {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="page-header">
					<h1>Index</h1>
					<p>Essays on consciousness, identity, perception, and the spaces between human and machine.</p>
				</div>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<article class="article-card" style={`--sigil-hue: ${post.data.author?.sigilHue ?? 28}`}>
										<span class="tag">{post.data.category}</span>
										<h2 class="article-card-title">{post.data.title}</h2>
										<p class="article-card-excerpt">{post.data.description}</p>
										<div class="article-card-meta">
											<span class="meta">
												<FormattedDate date={post.data.pubDate} /> Â· {post.data.readTime}
											</span>
										</div>
										<span class="author-name">
											<span class="author-dot" />
											{post.data.author?.name}
										</span>
									</article>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
