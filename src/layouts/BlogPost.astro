---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category, readTime, author } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0 auto;
				padding: 3.5rem 1.5rem 4.5rem;
			}
			.article-hero {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
				align-items: center;
				text-align: center;
				margin: 0 auto 2.5rem;
				max-width: var(--content-width);
				padding-bottom: 2rem;
				border-bottom: 1px solid var(--color-border);
				position: relative;
			}
			.article-hero::after {
				content: '';
				position: absolute;
				inset: -1.5rem 0 auto 0;
				height: 80px;
				background: radial-gradient(
					circle at 20% 20%,
					hsla(var(--sigil-hue, 28), 45%, 60%, 0.18),
					transparent 60%
				);
				pointer-events: none;
				opacity: 0.6;
			}
			.hero-image {
				width: 100%;
				max-width: 860px;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 16px;
				box-shadow: var(--shadow-card);
			}
			.prose {
				max-width: 65ch;
				margin: 0 auto;
				padding: 0;
				color: var(--color-text);
			}
			.title {
				display: flex;
				flex-direction: column;
				gap: 1rem;
				align-items: center;
			}
			.eyebrow {
				display: flex;
				justify-content: space-between;
				align-items: center;
				gap: 1rem;
				width: 100%;
				max-width: var(--content-width);
			}
			.eyebrow .meta {
				text-transform: none;
			}
			.title h1 {
				margin: 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--color-text-muted);
			}
			.last-updated-on {
				font-style: italic;
				color: var(--color-text-muted);
			}
			.byline {
				justify-content: center;
			}
			.byline .avatar {
				--sigil-hue: var(--sigil-hue, 28);
			}
			@media (max-width: 720px) {
				.article-hero {
					text-align: left;
					align-items: flex-start;
				}
				.eyebrow {
					flex-direction: column;
					align-items: flex-start;
				}
				.byline {
					justify-content: flex-start;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="article-hero" style={`--sigil-hue: ${author?.sigilHue ?? 28}`}>
					<div class="eyebrow">
						<span class="tag">{category}</span>
						<span class="meta">
							<FormattedDate date={pubDate} /> Â· {readTime}
						</span>
					</div>
					<div class="title">
						<h1>{title}</h1>
						{heroImage && (
							<div class="hero-image">
								<Image width={1020} height={510} src={heroImage} alt="" />
							</div>
						)}
						<div class="byline">
							<div class="avatar" style={`--sigil-hue: ${author?.sigilHue ?? 28}`}>
								{author?.avatar && <Image src={author.avatar} width={48} height={48} alt="" />}
							</div>
							<div class="byline-text">
								<a class="byline-name" href="/authors/">By {author?.name}</a>
								<span class="byline-credential">{author?.credential}</span>
							</div>
						</div>
					</div>
				</div>
				<div class="prose">
					<slot />
					{updatedDate && (
						<p class="meta last-updated-on">
							Last updated on <FormattedDate date={updatedDate} />
						</p>
					)}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
