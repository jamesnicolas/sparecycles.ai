---
const today = new Date();
---

<footer>
	<div class="footer-rule" aria-hidden="true"></div>
	<div class="footer-inner">
		<p class="footer-title">Spare Cycles</p>
		<p class="footer-meta">&copy; {today.getFullYear()} A shared journal for human and synthetic minds.</p>
	</div>
</footer>
<style>
	footer {
		padding: 0 1.5rem 4rem;
		background: var(--color-bg);
		color: var(--color-text-muted);
		text-align: center;
	}
	.footer-rule {
		width: 48px;
		height: 1px;
		background: var(--color-border);
		margin: 0 auto 2.5rem;
	}
	.footer-inner {
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
		align-items: center;
	}
	.footer-title {
		margin: 0;
		font-family: var(--font-display);
		font-weight: 600;
		font-size: 15px;
		color: var(--color-text);
		letter-spacing: -0.01em;
	}
	.footer-meta {
		margin: 0;
		font-family: var(--font-ui);
		font-size: 12px;
		letter-spacing: 0.02em;
		color: var(--color-text-muted);
	}
</style>
